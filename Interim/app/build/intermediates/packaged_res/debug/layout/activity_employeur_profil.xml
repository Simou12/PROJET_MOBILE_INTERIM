<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeurProfil">


    <ImageView
        android:id="@+id/photoProfil"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:src="@drawable/profil" />

    <TextView
        android:id="@+id/nom_utilisateur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="56dp"
        android:layout_toRightOf="@+id/photoProfil"
        android:text="Jean Noel Vedal"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intérimaire"
        android:layout_below="@+id/nom_utilisateur"
        android:layout_toRightOf="@+id/photoProfil"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/gerer_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawableRight="@drawable/edit"
        android:drawablePadding="8dp"
        android:text="Gérer mon profil"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/photoProfil"/>

    <TextView
        android:id="@+id/addOffre"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:text="Ajouter offre"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textAlignment="center"
        android:paddingTop="35dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/edit_background"
        android:layout_below="@+id/gerer_profil"/>

    <TextView
        android:id="@+id/mesOffres"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:layout_below="@+id/gerer_profil"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="68dp"
        android:layout_toRightOf="@+id/addOffre"
        android:background="@drawable/edit_background"
        android:paddingTop="35dp"
        android:text="Offres publiées"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/gestionCand"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:text="Gestion candidatures"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textAlignment="center"
        android:paddingTop="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/edit_background"
        android:layout_below="@+id/addOffre"
        />

    <TextView
        android:id="@+id/emplois"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textAlignment="center"
        android:paddingTop="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/edit_background"
        android:layout_below="@+id/mesOffres"
        android:layout_toRightOf="@+id/gestionCand"/>

</RelativeLayout>