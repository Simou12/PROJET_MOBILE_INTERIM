<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOffre">


    <TextView
        android:id="@+id/addOffre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter une offre"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <ImageView
        android:id="@+id/imageAddOffre"
        android:layout_width="97dp"
        android:layout_height="84dp"
        android:layout_below="@+id/addOffre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/add" />

    <TextView
        android:id="@+id/addOffres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageAddOffre"
        android:text="Ajouter plusieurs offres"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <ImageView
        android:id="@+id/imageAddOffres"
        android:layout_width="97dp"
        android:layout_height="84dp"
        android:layout_below="@+id/addOffres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        app:srcCompat="@drawable/add" />

    <TextView
        android:id="@+id/offres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageAddOffre"
        android:text=""
        android:textColor="@color/gris"
        android:textSize="30dp"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
       />

    <Button
        android:id="@+id/valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_background"
        android:layout_marginStart="10dp"
        android:text="Valider"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_below="@+id/offres"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>