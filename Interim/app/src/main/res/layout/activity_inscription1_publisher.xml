<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.interim.interim.Inscription1Publisher">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="JobSpot"
        android:textSize="30dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/round"
        />
    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/title"
        />

    <EditText
        android:id="@+id/nom"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingLeft="20dp"
        android:background="@drawable/edit_background"
        android:hint="Nom de l'entreprise"
        android:textAlignment="center"
        android:layout_below="@+id/titre" />

    <EditText
        android:id="@+id/depart"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:background="@drawable/edit_background"
        android:hint="Département (optionnel)"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_below="@+id/nom" />

    <EditText
        android:id="@+id/sousDepart"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:background="@drawable/edit_background"
        android:hint="Sous département (optionnel)"
        android:textAlignment="center"
        android:layout_below="@+id/depart" />
    <EditText
        android:id="@+id/numEntite"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:background="@drawable/edit_background"
        android:hint="Numéro nationale de l'entité"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_below="@+id/sousDepart" />
    <EditText
        android:id="@+id/contact1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:background="@drawable/edit_background"
        android:hint="Nom personne contact 1"
        android:textAlignment="center"
        android:layout_below="@+id/numEntite" />
    <EditText
        android:id="@+id/contact2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:background="@drawable/edit_background"
        android:hint="Nom personne contact 2"
        android:textAlignment="center"
        android:layout_below="@+id/contact1" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_below="@+id/contact2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/next" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="19dp"
        android:text="2/3"
        android:textSize="20dp"
        android:textColor="@color/grisClair"/>

</RelativeLayout>