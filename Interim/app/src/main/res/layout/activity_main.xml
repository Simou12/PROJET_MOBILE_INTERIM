<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="JobSpot"
        android:textSize="30dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/round"
        />

    <ImageView
        android:id = "@+id/image"
        android:layout_width="198dp"
        android:layout_height="225dp"
        android:src="@drawable/connexionimage"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titre"
        />

    <Button
        android:id="@+id/conx"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:text="Connexion"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/inscription"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/conx"
        android:backgroundTint="@color/white"
        android:text="Inscription"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/anonyme"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:text="Utilisateur anonyme"
        android:layout_below="@+id/conx"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/xxx"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/inscription"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/anonyme"
        android:backgroundTint="@color/white"
        android:text="Aide"
        android:textColor="@color/black" />

</RelativeLayout>