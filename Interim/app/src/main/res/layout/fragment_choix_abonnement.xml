<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleuClair"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Choix de l'abonnement"
        android:textColor="@color/blue_background"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <!-- Second row: Buttons 3 and 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <!-- Third row: Buttons 5 and 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:id="@+id/trimestriel"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/mensuel"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@+id/semestriel"
        android:backgroundTint="@color/white"
        android:text=" Trimestriel"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toEndOf="@+id/semestriel"
        app:layout_constraintTop_toBottomOf="@+id/mensuel" />

    <Button
        android:id="@+id/semestriel"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/annuel"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:text="Semestriel "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/annuel" />

    <Button
        android:id="@+id/annuel"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/indetermine"
        android:layout_marginStart="40dp"
        android:layout_marginTop="63dp"
        android:backgroundTint="@color/white"
        android:text="Annuel"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/indetermine"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/unMois"
        android:backgroundTint="@color/white"
        android:text="Indetermine"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toEndOf="@+id/unMois"
        app:layout_constraintTop_toBottomOf="@+id/trimestriel"
        app:layout_constraintVertical_bias="0.305" />

    <Button
        android:id="@+id/mensuel"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/unMois"
        android:layout_marginTop="63dp"
        android:layout_toRightOf="@+id/unMois"
        android:backgroundTint="@color/white"
        android:text="Mensuel"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toEndOf="@+id/annuel"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/unMois"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/title"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/white"
        android:text="Un mois"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semestriel"
        app:layout_constraintVertical_bias="0.327" />

</androidx.constraintlayout.widget.ConstraintLayout>







